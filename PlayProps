# Global settings
global:
  image:
    repository: your-registry/syslog-collector
    tag: latest
    pullPolicy: IfNotPresent
  
  # Common resource settings
  resources:
    limits:
      cpu: 500m
      memory: 512Mi
    requests:
      cpu: 200m
      memory: 256Mi

# Syslog collector configuration
syslogCollector:
  # Enable or disable the entire collector setup
  enabled: true
  
  # Define the number of instances to create (1-5)
  instances: 5
  
  # Base port number - will be incremented for each instance
  basePort: 5140
  
  # Naming pattern for instances
  namingPattern: "dceprd%d-syslog-collector"
  
  # Volume configuration
  secretVolume:
    name: "syslog-collector-secrets"
    mountPath: "/etc/syslog-collector/secrets"
  
  # Container configuration (can be overridden per instance)
  containerConfig:
    livenessProbe:
      tcpSocket:
        port: http
      initialDelaySeconds: 30
      periodSeconds: 10
    readinessProbe:
      tcpSocket:
        port: http
      initialDelaySeconds: 5
      periodSeconds: 10
  
  # Pod security context
  securityContext:
    runAsUser: 1000
    runAsGroup: 1000
    fsGroup: 1000
  
  # Pod annotations
  podAnnotations:
    prometheus.io/scrape: "true"
    prometheus.io/port: "metrics"
  
  # Per-instance configurations (optional overrides)
  # These will override the default settings for specific instances
  instanceOverrides:
    # Example: Customize the first instance
    - instanceIndex: 1
      resources:
        limits:
          cpu: 1000m
          memory: 1Gi
      annotations:
        special-annotation: "value-for-instance-1"
    
    # Example: Customize the second instance
    - instanceIndex: 2
      env:
        - name: SPECIAL_CONFIG
          value: "special-value-for-instance-2"
