clamp_min(
  (
    sum by (vpn, host) (increase(sol_event_system_cfgsync_down_total[1h] offset 2m)) -
    (
      sum by (vpn, host) (increase(sol_event_system_cfgsync_up_total[1h] offset 2m))
      or on(vpn, host) 0 * sum by (vpn, host) (increase(sol_event_system_cfgsync_down_total[1h] offset 2m))
    )
  )
  -
  min_over_time(
    (
      sum by (vpn, host) (increase(sol_event_system_cfgsync_down_total[1h] offset 2m)) -
      (
        sum by (vpn, host) (increase(sol_event_system_cfgsync_up_total[1h] offset 2m))
        or on(vpn, host) 0 * sum by (vpn, host) (increase(sol_event_system_cfgsync_down_total[1h] offset 2m))
      )
    )[1h:15m]
  ),
0) > 0
