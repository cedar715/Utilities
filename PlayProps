// src/main/java/com/acme/solace/obz/EventPair.java
package com.acme.solace.obz;

import java.util.*;

public enum EventPair {
  HA_NODE("sol_state_ha_node_left", 
          "sol_event_system_ha_redun_group_node_left_total",
          "sol_event_system_ha_redun_group_node_joined_total",
          List.of("vpn","host","group")),
  BRIDGE_LINK("sol_state_vpn_bridging_link_rejected",
              "sol_event_vpn_bridging_link_rejected_total",
              "sol_event_vpn_bridging_link_accepted_total",   // or ..._up_total
              List.of("vpn","host","link")),
  CFGSYNC("sol_state_cfgsync_down",
          "sol_event_system_cfgsync_down_total",
          "sol_event_system_cfgsync_up_total",
          List.of("vpn","host"));

  public final String metricBase;        // used for *_active and *_since_unixtime
  public final String problemCounter;    // your existing counters
  public final String recoveryCounter;   // your existing counters
  public final List<String> labels;

  EventPair(String base, String prob, String ok, List<String> labels) {
    this.metricBase = base; this.problemCounter = prob; this.recoveryCounter = ok; this.labels = labels;
  }
}
