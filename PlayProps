---
- name: Redeploy Syslog Collector Podman Container
  hosts: all
  tasks:
    - name: Copy updated environment file
      template:
        src: env_file.j2
        dest: /home/{{ solace_local_service_user }}/etc_solace/env
        owner: solace
        group: solace
        mode: 0644
      notify:
        - restart syslog collector

  handlers:
    - name: restart syslog collector
      include_tasks: roles/syslog_collector/tasks/reload_config.yml
