receivers:
  otlp:
    protocols:
      grpc:
        endpoint: 0.0.0.0:4317
        max_recv_msg_size_mib: 16
        max_concurrent_streams: 50

exporters:
  kafka:
    brokers:
      - nginx-kafka-proxy:9092
    topic: solace-syslog
    encoding: raw
    producer:
      max_message_bytes: 1048576
      required_acks: 1          # acks=all would be safer but slower
      compression: lz4          # better for high throughput than snappy
      flush_max_messages: 1000
    retry_on_failure:
      enabled: true
      initial_interval: 500ms
      max_interval: 30s
      max_elapsed_time: 10m     # keep retrying during outages
    sending_queue:
      enabled: true
      num_consumers: 20         # parallel senders to Kafka
      queue_size: 50000         # ~50k messages buffer
      storage: file_storage     # persist queue to disk
    timeout: 60s

extensions:
  file_storage:
    directory: /var/otel/queue
    timeout: 10s
    compaction:
      on_start: true
      on_rebound: true
      directory: /var/otel/queue/tmp

processors:
  batch:
    send_batch_size: 1000
    send_batch_max_size: 2000
    timeout: 2s
  
  memory_limiter:
    check_interval: 500ms
    limit_mib: 1024
    spike_limit_mib: 256

service:
  extensions: [file_storage]
  pipelines:
    logs:
      receivers: [otlp]
      processors: [memory_limiter, batch]
      exporters: [kafka]
