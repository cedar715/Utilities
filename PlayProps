clamp_min(
  (
    sum by (vpn, host) (increase(sol_event_vpn_bridging_link_down_total[15m])) -
    (
      sum by (vpn, host) (increase(sol_event_vpn_bridging_link_up_total[15m]))
      or on(vpn, host)
         0 * sum by (vpn, host) (increase(sol_event_vpn_bridging_link_down_total[15m]))
    )
  )
  -
  min_over_time(
    (
      sum by (vpn, host) (increase(sol_event_vpn_bridging_link_down_total[15m])) -
      (
        sum by (vpn, host) (increase(sol_event_vpn_bridging_link_up_total[15m]))
        or on(vpn, host)
           0 * sum by (vpn, host) (increase(sol_event_vpn_bridging_link_down_total[15m]))
      )
    )[15m:1s]
  ),
0)
