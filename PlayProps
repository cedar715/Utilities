# Test profile configuration
# Used by integration tests to avoid loading real OTEL exporter

spring:
  application:
    name: syslog-collector-test

syslog:
  port: 0  # random port for tests
  so-timeout: 5000
  backlog: 10
  core-pool-size: 2
  max-pool-size: 4
  queue-capacity: 100

otel:
  client:
    endpoint: "http://localhost:4318/v1/logs"  # not used in tests
    service-namespace: "test"
    service-version: "1.0.0-test"
    max-queue-size: 100
    max-export-batch-size: 10
    schedule-delay-ms: 10
    exporter-timeout-ms: 1000
    http-timeout-ms: 1000

logging:
  level:
    root: WARN
    com.example.syslog: DEBUG
